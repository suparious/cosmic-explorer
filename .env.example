# Example environment variables for Cosmic Explorer
# Copy this file to .env and modify values to override defaults

# Game metadata
GAME_NAME=Cosmic Explorer
GAME_VERSION=0.1.0

# Player starting stats
STARTING_HEALTH=100
STARTING_WEALTH=500
STARTING_SHIP_CONDITION=100
STARTING_FUEL=100
STARTING_FOOD=50

# Game victory and loss conditions
VICTORY_WEALTH_THRESHOLD=2000
MINIMUM_FUEL_THRESHOLD=0

# Event probabilities (as percentages)
QUEST_OFFER_CHANCE=30
RANDOM_EVENT_CHANCE=60
FUEL_CONSUMPTION_RATE=5

# Difficulty settings
DIFFICULTY_LEVEL=Medium
MAX_TURNS=50

# Save file location
SAVE_FILE_PATH=/scratch-space/new_game_folder/save_game.json

# WebSocket and server settings for future UI integration
WEBSOCKET_HOST=localhost
WEBSOCKET_PORT=8765
DATA_SERVICE_URL=http://localhost:8000/api
